---
import Layout from '../layouts/Layout.astro';
import Words from '../components/Words.astro';

const titulo = "Amistad 🐼🐻🐻‍❄️"
const texto = "Eres simplemente la mejor. ¿Sabes por qué? Porque siempre estás ahí, sin importar qué. Tienes el superpoder de apoyo incondicional. No importa si estoy en la cima del mundo o atravesando el peor momento. ¡Eres mi persona, mi confidente y mi mejor apoyo en esta loca aventura llamada vida!"
const href = "/characters"
const image = "/polar-animado.gif"
const alt = "polar victorioso"
---

<Layout title="BonitApp ;)">    
	<Words titulo={titulo} texto={texto} href={href} image={image} alt={alt} />
</Layout>