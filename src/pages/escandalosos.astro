---
import Layout from '../layouts/Layout.astro';
import Words from '../components/Words.astro';

const titulo = "El positivismo de Bob"
const texto = "Así como Bob Esponja irradia una inquebrantable positividad y optimismo, con una capacidad única para encontrar alegría incluso en las circunstancias más desafiantes, posees una cualidad igualmente valiosa y excepcional. "
const href = "/characters"
const image = "/bob-bailando.gif"
const alt = "bob esponja sacando los pasos prohibidos"
---

<Layout title="BonitApp ;)">    
	<Words titulo={titulo} texto={texto} href={href} image={image} alt={alt} />
</Layout>