---
import HeaderButton from "./HeaderButton.astro";

interface Props {
	titulo: string;
    texto: string;
    href: string;
    image: string;
    alt: string;
}

const { titulo, texto, href, image, alt } = Astro.props;
---

<div class="p-10">    
    <div class="text-4xl flex flex-col justify-center items-center">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-white">            
            {titulo}
        </h2>        
        <p class="font-light text-3xl text-gray-400">            
            {texto}
        </p>              
        
        <img class="w-[45%] rounded-[2.5rem] pt-4" src={image} alt={alt}>                      
    </div>    

    <nav class="flex items-center justify-center w-full text-center md:flex-row pt-4"> 
        <HeaderButton class="text-white" href="/">Inicio 🏚️</HeaderButton>
        <HeaderButton class="text-white" href={href}>Sigue 😏</HeaderButton>
    </nav>
</div>